# ============================================================
# 環境設定ファイルテンプレート (.env.template)
# ============================================================
# 使用方法: cp .env.template .env && 実際の値を入力
# ============================================================

# ------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------
DATABASE_PASSWORD=your_secure_password_here

# ------------------------------------------------------------
# Application Security
# ------------------------------------------------------------
SECRET_KEY=your_secret_key_32_characters_or_more
ENCRYPTION_KEY=your_base64_encoded_encryption_key_here

# ------------------------------------------------------------
# eBay API Configuration
# ------------------------------------------------------------
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here
EBAY_REDIRECT_URI=your_ebay_runame_here
EBAY_ENVIRONMENT=sandbox  # または production
EBAY_MOCK_MODE=false

# ------------------------------------------------------------
# CORS Configuration
# ------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000

# ------------------------------------------------------------
# Logging
# ------------------------------------------------------------
LOG_LEVEL=INFO

# ------------------------------------------------------------
# Debug Mode
# ------------------------------------------------------------
DEBUG=True
