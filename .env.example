# Database Configuration
DATABASE_PASSWORD=your_secure_postgres_password_here

# Application Security
SECRET_KEY=your_jwt_secret_key_here_min_32_chars
ENCRYPTION_KEY=your_aes_encryption_key_base64_here

# eBay API Configuration
EBAY_CLIENT_ID=your_ebay_app_id_here
EBAY_CLIENT_SECRET=your_ebay_cert_id_here
EBAY_REDIRECT_URI=http://localhost:8000/api/ebay-accounts/callback
EBAY_ENVIRONMENT=sandbox  # or 'production'

# eBay Mock Mode (set to 'true' to use mock data instead of real eBay API)
# Useful when eBay credentials are not available yet
EBAY_MOCK_MODE=true

# eBay API Endpoints (automatically set based on environment)
# Sandbox URLs will be used if EBAY_ENVIRONMENT=sandbox
# Production URLs will be used if EBAY_ENVIRONMENT=production

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api

# Redis Configuration (optional, defaults work for docker-compose)
# REDIS_URL=redis://redis:6379/0

# Database URL (optional, constructed from components above)
# DATABASE_URL=postgresql://ebayuser:${DATABASE_PASSWORD}@postgres:5432/ebay_trends

# Application Settings
APP_NAME=eBay Trend Research Tool
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=30

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Data Sync Settings
SYNC_BATCH_SIZE=100
MAX_ITEMS_PER_ACCOUNT=2000

# Timezone
TZ=Asia/Tokyo

# Email Notification (optional, for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# NOTIFICATION_EMAIL_FROM=noreply@ebaytrends.com

# Sentry (optional, for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
